<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@color/laranja_splash"
        >
        <LinearLayout
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
            <ImageView
                android:id="@+id/btn_pg_initial"
                android:layout_width="56dp"
                android:layout_height="54dp"
                android:src="@drawable/home"
                android:padding="4dp"
                android:layout_marginEnd="8dp"
                />
            <ImageView
                android:id="@+id/btn_pg_search"
                android:layout_width="56dp"
                android:layout_height="54dp"
                android:src="@drawable/search"
                android:padding="4dp"
                android:layout_marginEnd="8dp"
                />
            <ImageView
                android:id="@+id/btn_pg_create_publication"
                android:layout_width="56dp"
                android:layout_height="54dp"
                android:src="@drawable/publication"
                android:padding="4dp"
                android:layout_marginEnd="8dp"
                />
            <ImageView
                android:id="@+id/btn_pg_communities"
                android:layout_width="56dp"
                android:layout_height="54dp"
                android:src="@drawable/communities"
                android:padding="4dp"
                android:layout_marginEnd="8dp"
                />
            <ImageView
                android:id="@+id/btn_pg_profile"
                android:layout_width="56dp"
                android:layout_height="54dp"
                android:src="@drawable/profile"
                android:padding="4dp"
                />
        </LinearLayout>

    </LinearLayout>



</LinearLayout>